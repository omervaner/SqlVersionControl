<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SqlVersionControl.Views.PasswordDialog"
        Title="Enter Password"
        Width="350" Height="180"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <StackPanel Margin="20">
        <TextBlock Name="MessageText" TextWrapping="Wrap" Margin="0,0,0,15"/>

        <TextBlock Text="Password:" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBox Name="PasswordBox" PasswordChar="â—"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0" Spacing="10">
            <Button Name="CancelButton" Content="Cancel" Padding="15,8"/>
            <Button Name="OkButton" Content="Connect" Background="#2a6e4e" Foreground="White" Padding="15,8"/>
        </StackPanel>
    </StackPanel>
</Window>
