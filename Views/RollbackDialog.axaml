<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SqlVersionControl.Views.RollbackDialog"
        Title="Confirm Rollback"
        Width="500" Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#e63946" Padding="20,15">
            <StackPanel>
                <TextBlock Text="âš  Rollback Confirmation" FontSize="18" FontWeight="Bold" Foreground="White"/>
                <TextBlock Name="WarningText" Foreground="#ffcdd2" FontSize="12" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Preview -->
        <Grid Grid.Row="1" RowDefinitions="Auto,*">
            <TextBlock Grid.Row="0" Text="This ALTER statement will be executed:"
                       FontWeight="SemiBold" Margin="15,10,15,5"/>
            <Border Grid.Row="1" Background="#1e1e1e" Margin="15,0,15,10">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <TextBlock Name="PreviewText"
                               FontFamily="Consolas,Menlo,Monaco,monospace"
                               FontSize="11"
                               Foreground="#d4d4d4"
                               Padding="10"/>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15">
            <Button Name="CancelButton" Content="Cancel" Padding="20,8" Margin="0,0,10,0"/>
            <Button Name="ConfirmButton" Content="Execute Rollback"
                    Background="#e63946" Foreground="White" Padding="20,8"/>
        </StackPanel>
    </Grid>
</Window>
