<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:SqlVersionControl.ViewModels"
             xmlns:views="using:SqlVersionControl.Views"
             x:Class="SqlVersionControl.Views.CompareView"
             x:DataType="vm:CompareViewModel">

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <!-- Top Bar Row 1: Source, Search, Target1 -->
        <Border Grid.Row="0" Background="#1a1a2e" Padding="10,8">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <!-- Source Connection -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="6">
                    <TextBlock Text="Source:" Foreground="White" VerticalAlignment="Center" FontSize="12"/>
                    <ComboBox ItemsSource="{Binding SourceConnections}"
                              SelectedItem="{Binding SelectedSourceConnection}"
                              MinWidth="160"
                              PlaceholderText="Select source...">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button Name="AddSourceButton" Content="+" ToolTip.Tip="Add new connection"
                            Padding="6,2" FontWeight="Bold" Background="#4a4a6e" Foreground="White"/>
                </StackPanel>

                <!-- Search (centered) -->
                <TextBox Grid.Column="1" Text="{Binding SearchText}"
                         Watermark="Search objects..."
                         Width="200" HorizontalAlignment="Center"/>

                <!-- Target1 Connection + T2 Toggle -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="6">
                    <TextBlock Text="Target 1:" Foreground="White" VerticalAlignment="Center" FontSize="12"/>
                    <ComboBox ItemsSource="{Binding TargetConnections}"
                              SelectedItem="{Binding SelectedTargetConnection}"
                              MinWidth="160"
                              PlaceholderText="Select target...">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button Name="AddTargetButton" Content="+" ToolTip.Tip="Add new connection"
                            Padding="6,2" FontWeight="Bold" Background="#4a4a6e" Foreground="White"/>
                    <Button Command="{Binding ToggleTarget2Command}"
                            Content="{Binding ToggleTarget2ButtonText}"
                            ToolTip.Tip="Add/remove third database for 3-way compare"
                            Padding="8,2" FontWeight="Bold" Background="#2980b9" Foreground="White"
                            Margin="8,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Top Bar Row 2: Target2 (only visible when ShowTarget2 is true) -->
        <Border Grid.Row="1" Background="#252540" Padding="10,6" IsVisible="{Binding ShowTarget2}">
            <StackPanel Orientation="Horizontal" Spacing="6" HorizontalAlignment="Right">
                <TextBlock Text="Target 2:" Foreground="White" VerticalAlignment="Center" FontSize="12"/>
                <ComboBox ItemsSource="{Binding Target2Connections}"
                          SelectedItem="{Binding SelectedTarget2Connection}"
                          MinWidth="160"
                          PlaceholderText="Select target 2...">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayName}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button Name="AddTarget2Button" Content="+" ToolTip.Tip="Add new connection"
                        Padding="6,2" FontWeight="Bold" Background="#4a4a6e" Foreground="White"/>
                <TextBlock Text="{Binding Target2Status}" Foreground="#aaa"
                           VerticalAlignment="Center" FontSize="11" Margin="8,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" ColumnDefinitions="200,Auto,*">
            <!-- Object List -->
            <Border Grid.Column="0" Background="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" BorderThickness="0,0,1,0">
                <Grid RowDefinitions="Auto,Auto,Auto,*">
                    <Border Grid.Row="0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}" Padding="8">
                        <StackPanel Spacing="4">
                            <TextBlock Text="Objects" FontWeight="SemiBold" FontSize="12"/>
                            <CheckBox Content="Show only differences"
                                      IsChecked="{Binding ShowOnlyDifferences}"
                                      FontSize="11"/>
                        </StackPanel>
                    </Border>

                    <!-- Progress Bar (when scanning) -->
                    <Border Grid.Row="1" Padding="10,5" Background="#805c3a00"
                            IsVisible="{Binding IsScanning}">
                        <StackPanel Spacing="5">
                            <TextBlock Text="{Binding ScanProgressText}" FontSize="10" Foreground="#e6a23c"/>
                            <ProgressBar Value="{Binding ScanProgress}" Minimum="0" Maximum="100" Height="8"/>
                        </StackPanel>
                    </Border>

                    <!-- Summary Stats -->
                    <Border Grid.Row="2" Padding="10,8" Background="#402980b9"
                            IsVisible="{Binding HasSummary}">
                        <StackPanel Spacing="3">
                            <TextBlock FontSize="10" FontWeight="SemiBold" Foreground="#5dade2">Summary:</TextBlock>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock FontSize="10">
                                    <Run Text="~" Foreground="#f39c12" FontWeight="Bold"/>
                                    <Run Text="{Binding ModifiedCount}"/> Modified
                                </TextBlock>
                                <TextBlock FontSize="10">
                                    <Run Text="+" Foreground="#2ecc71" FontWeight="Bold"/>
                                    <Run Text="{Binding SourceOnlyCount}"/> Source
                                </TextBlock>
                                <TextBlock FontSize="10">
                                    <Run Text="-" Foreground="#e74c3c" FontWeight="Bold"/>
                                    <Run Text="{Binding TargetOnlyCount}"/> Target
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="3"
                             ItemsSource="{Binding Objects}"
                             SelectedItem="{Binding SelectedObject}"
                             Padding="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <CheckBox IsChecked="{Binding IsSelected}"
                                              IsVisible="{Binding ExistsInSource}"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding StatusIcon}" FontWeight="Bold"
                                               Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                               VerticalAlignment="Center" Width="12"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding ObjectName}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding SchemaName}" FontSize="10" Foreground="#666"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Resizable Splitter -->
            <GridSplitter Grid.Column="1" Width="5" Background="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                          HorizontalAlignment="Center" VerticalAlignment="Stretch"/>

            <!-- Diff Views Container -->
            <Grid Grid.Column="2">
                <!-- Single diff view (when Target2 not shown) -->
                <Grid RowDefinitions="Auto,*" IsVisible="{Binding !ShowTarget2}">
                    <!-- Headers -->
                    <Grid Grid.Row="0" ColumnDefinitions="*,*" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
                        <Border Grid.Column="0" Padding="10" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" BorderThickness="0,0,1,0">
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Text="Source Definition" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <Button Grid.Column="1" Content="Copy" Command="{Binding CopySourceCommand}"
                                        FontSize="10" Padding="8,2" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <Border Grid.Column="1" Padding="10" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Text="Target Definition" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <Button Grid.Column="1" Content="Copy" Command="{Binding CopyTargetCommand}"
                                        FontSize="10" Padding="8,2" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Side by Side Diff -->
                    <views:DiffView Grid.Row="1" DiffModel="{Binding DiffModel}" x:Name="CompareDiffView"/>
                </Grid>

                <!-- Three-way diff view (when Target2 shown) -->
                <Grid RowDefinitions="*,Auto,*" IsVisible="{Binding ShowTarget2}">
                    <!-- First Diff: Source ↔ Target1 -->
                    <Grid Grid.Row="0" RowDefinitions="Auto,*">
                        <Grid Grid.Row="0" ColumnDefinitions="*,*" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
                            <Border Grid.Column="0" Padding="8" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" BorderThickness="0,0,1,0">
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock Text="Source" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <Button Grid.Column="1" Content="Copy" Command="{Binding CopySourceCommand}"
                                            FontSize="10" Padding="6,2" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            <Border Grid.Column="1" Padding="8">
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock Text="Target 1" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    <Button Grid.Column="1" Content="Copy" Command="{Binding CopyTargetCommand}"
                                            FontSize="10" Padding="6,2" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <views:DiffView Grid.Row="1" DiffModel="{Binding DiffModel}" x:Name="CompareDiffView1"/>
                    </Grid>

                    <!-- Splitter between diff views -->
                    <GridSplitter Grid.Row="1" Height="5" Background="#4a4a6e"
                                  HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

                    <!-- Second Diff: Target1 ↔ Target2 -->
                    <Grid Grid.Row="2" RowDefinitions="Auto,*">
                        <Grid Grid.Row="0" ColumnDefinitions="*,*" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}">
                            <Border Grid.Column="0" Padding="8" BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}" BorderThickness="0,0,1,0">
                                <TextBlock Text="Target 1" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </Border>
                            <Border Grid.Column="1" Padding="8">
                                <TextBlock Text="Target 2" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <views:DiffView Grid.Row="1" DiffModel="{Binding DiffModel2}" x:Name="CompareDiffView2"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <!-- Bottom Bar: Deploy Button and Status -->
        <Border Grid.Row="3" Background="#1a1a2e" Padding="10,8">
            <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto,Auto,Auto">
                <!-- Refresh Button -->
                <Button Grid.Column="0" Content="⟳ Refresh" Command="{Binding RefreshCommand}"
                        Padding="12,6" Background="#4a4a6e" Foreground="White" Margin="0,0,15,0"
                        FontWeight="SemiBold"/>

                <TextBlock Grid.Column="1" Text="{Binding StatusMessage}"
                           Foreground="#aaa" VerticalAlignment="Center"/>

                <!-- Selection controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="5" Margin="0,0,15,0">
                    <Button Content="All" Command="{Binding SelectAllCommand}"
                            FontSize="10" Padding="8,4" Background="#4a4a6e" Foreground="White"/>
                    <Button Content="None" Command="{Binding DeselectAllCommand}"
                            FontSize="10" Padding="8,4" Background="#4a4a6e" Foreground="White"/>
                </StackPanel>

                <!-- Deploy Selected -->
                <Button Grid.Column="3" Command="{Binding DeploySelectedCommand}"
                        IsVisible="{Binding HasSelection}"
                        Background="#e67e22" Foreground="White"
                        Padding="12,6" Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="Deploy"/>
                        <TextBlock Text="{Binding SelectedCount}"/>
                        <TextBlock Text="Selected"/>
                    </StackPanel>
                </Button>

                <!-- Deploy Source → Target1 -->
                <Button Grid.Column="4" Content="Deploy to Target 1"
                        Command="{Binding DeployCommand}"
                        IsEnabled="{Binding CanDeploy}"
                        Background="#2a6e4e" Foreground="White"
                        Padding="12,6" Margin="0,0,10,0"/>

                <!-- Deploy Target1 → Target2 (only visible in three-way mode) -->
                <Button Grid.Column="5" Content="Deploy to Target 2"
                        Command="{Binding Deploy2Command}"
                        IsEnabled="{Binding CanDeploy2}"
                        IsVisible="{Binding ShowTarget2}"
                        Background="#2980b9" Foreground="White"
                        Padding="12,6"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
