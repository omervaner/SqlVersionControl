<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:SqlVersionControl.ViewModels"
             xmlns:views="using:SqlVersionControl.Views"
             x:Class="SqlVersionControl.Views.CompareView"
             x:DataType="vm:CompareViewModel">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Top Bar: Connections and Search -->
        <Border Grid.Row="0" Background="#1a1a2e" Padding="15,10">
            <Grid ColumnDefinitions="*,Auto,*">
                <!-- Source Connection -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Source:" Foreground="White" VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding SourceConnections}"
                              SelectedItem="{Binding SelectedSourceConnection}"
                              MinWidth="180"
                              PlaceholderText="Select source...">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button Name="AddSourceButton" Content="+" ToolTip.Tip="Add new connection"
                            Padding="8,4" FontWeight="Bold" Background="#4a4a6e" Foreground="White"/>
                    <TextBlock Text="{Binding SourceStatus}" Foreground="#aaa"
                               VerticalAlignment="Center" FontSize="11" MaxWidth="150" TextTrimming="CharacterEllipsis"/>
                </StackPanel>

                <!-- Search -->
                <TextBox Grid.Column="1" Text="{Binding SearchText}"
                         Watermark="Search objects..."
                         Width="250" Margin="20,0"/>

                <!-- Target Connection -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                    <TextBlock Text="Target:" Foreground="White" VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding TargetConnections}"
                              SelectedItem="{Binding SelectedTargetConnection}"
                              MinWidth="180"
                              PlaceholderText="Select target...">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button Name="AddTargetButton" Content="+" ToolTip.Tip="Add new connection"
                            Padding="8,4" FontWeight="Bold" Background="#4a4a6e" Foreground="White"/>
                    <TextBlock Text="{Binding TargetStatus}" Foreground="#aaa"
                               VerticalAlignment="Center" FontSize="11" MaxWidth="120" TextTrimming="CharacterEllipsis"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="250,*">
            <!-- Object List -->
            <Border Grid.Column="0" Background="#f5f5f5" BorderBrush="#ddd" BorderThickness="0,0,1,0">
                <Grid RowDefinitions="Auto,Auto,Auto,*">
                    <Border Grid.Row="0" Background="#e8e8e8" Padding="10">
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBlock Text="Objects" FontWeight="SemiBold"/>
                                <Button Content="Refresh" Command="{Binding RefreshCommand}"
                                        FontSize="11" Padding="5,2"/>
                            </StackPanel>
                            <CheckBox Content="Show only differences"
                                      IsChecked="{Binding ShowOnlyDifferences}"
                                      FontSize="11"/>
                        </StackPanel>
                    </Border>

                    <!-- Progress Bar (when scanning) -->
                    <Border Grid.Row="1" Padding="10,5" Background="#fff3cd"
                            IsVisible="{Binding IsScanning}">
                        <StackPanel Spacing="5">
                            <TextBlock Text="{Binding ScanProgressText}" FontSize="10" Foreground="#856404"/>
                            <ProgressBar Value="{Binding ScanProgress}" Minimum="0" Maximum="100" Height="8"/>
                        </StackPanel>
                    </Border>

                    <!-- Summary Stats -->
                    <Border Grid.Row="2" Padding="10,8" Background="#e3f2fd"
                            IsVisible="{Binding HasSummary}">
                        <StackPanel Spacing="3">
                            <TextBlock FontSize="10" FontWeight="SemiBold" Foreground="#1565c0">Summary:</TextBlock>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <TextBlock FontSize="10">
                                    <Run Text="~" Foreground="#e67e22" FontWeight="Bold"/>
                                    <Run Text="{Binding ModifiedCount}"/> Modified
                                </TextBlock>
                                <TextBlock FontSize="10">
                                    <Run Text="+" Foreground="#27ae60" FontWeight="Bold"/>
                                    <Run Text="{Binding SourceOnlyCount}"/> Source
                                </TextBlock>
                                <TextBlock FontSize="10">
                                    <Run Text="-" Foreground="#e74c3c" FontWeight="Bold"/>
                                    <Run Text="{Binding TargetOnlyCount}"/> Target
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="3"
                             ItemsSource="{Binding Objects}"
                             SelectedItem="{Binding SelectedObject}"
                             Padding="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <CheckBox IsChecked="{Binding IsSelected}"
                                              IsVisible="{Binding ExistsInSource}"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding StatusIcon}" FontWeight="Bold"
                                               Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                               VerticalAlignment="Center" Width="12"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding ObjectName}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding SchemaName}" FontSize="10" Foreground="#666"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Diff View -->
            <Grid Grid.Column="1" RowDefinitions="Auto,*">
                <!-- Headers -->
                <Grid Grid.Row="0" ColumnDefinitions="*,*" Background="#e8e8e8">
                    <Border Grid.Column="0" Padding="10" BorderBrush="#ddd" BorderThickness="0,0,1,0">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Source Definition" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <Button Grid.Column="1" Content="Copy" Command="{Binding CopySourceCommand}"
                                    FontSize="10" Padding="8,2" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <Border Grid.Column="1" Padding="10">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Target Definition" FontWeight="SemiBold" VerticalAlignment="Center"/>
                            <Button Grid.Column="1" Content="Copy" Command="{Binding CopyTargetCommand}"
                                    FontSize="10" Padding="8,2" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Side by Side Diff -->
                <views:DiffView Grid.Row="1" DiffModel="{Binding DiffModel}" x:Name="CompareDiffView"/>
            </Grid>
        </Grid>

        <!-- Bottom Bar: Deploy Button and Status -->
        <Border Grid.Row="2" Background="#1a1a2e" Padding="15,10">
            <Grid ColumnDefinitions="*,Auto,Auto,Auto,Auto">
                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}"
                           Foreground="#aaa" VerticalAlignment="Center"/>

                <!-- Selection controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="5" Margin="0,0,15,0">
                    <Button Content="All" Command="{Binding SelectAllCommand}"
                            FontSize="10" Padding="8,4" Background="#4a4a6e" Foreground="White"/>
                    <Button Content="None" Command="{Binding DeselectAllCommand}"
                            FontSize="10" Padding="8,4" Background="#4a4a6e" Foreground="White"/>
                </StackPanel>

                <!-- Deploy Selected -->
                <Button Grid.Column="2" Command="{Binding DeploySelectedCommand}"
                        IsVisible="{Binding HasSelection}"
                        Background="#e67e22" Foreground="White"
                        Padding="15,10" Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal" Spacing="5">
                        <TextBlock Text="Deploy"/>
                        <TextBlock Text="{Binding SelectedCount}"/>
                        <TextBlock Text="Selected"/>
                    </StackPanel>
                </Button>

                <!-- Deploy Single -->
                <Button Grid.Column="3" Content="Deploy to Target"
                        Command="{Binding DeployCommand}"
                        IsEnabled="{Binding CanDeploy}"
                        Background="#2a6e4e" Foreground="White"
                        Padding="20,10"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
